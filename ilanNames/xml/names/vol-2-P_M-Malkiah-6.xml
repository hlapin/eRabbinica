               </persName>
               <persName type="lemma" xml:lang="en">Malkiah</persName>
               <persName xml:lang="gr"><ref corresp="#d967e4"/>
               </persName>
               <persName xml:lang="checkme"/>
               <state type="desc">
                  <note>Gelasius (3)’s father</note>
               </state>
