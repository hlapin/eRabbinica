               <persName xml:lang="checkme">Baranina<ref type="note" corresp="#d297e3"/>
               </persName>
               <state type="desc">
                  <note>Jerome’s teacher<ref type="note" corresp="#d2e12247"/>
                  </note>
               </state>
               <state type="provenance">
                  <note>–</note>
               </state>
               <bibl>Jerome,PL22, 745</bibl>
