               <persName type="lemma" xml:lang="en">Yohanan</persName>
               <persName xml:lang="gr"><ref corresp="#d545e4"/>
               </persName>
               <state type="desc">
                  <note>Innkeeper<ref corresp="#d2e21534"/>
