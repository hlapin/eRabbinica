                  <person xml:id="Vol-2-Vol-1-ADD-B_F-d8e634-person"
                          n="Vol-2-Vol-1-ADD-B_F-Biblical-Females-Salome-2">
                     <sex cert="high">F</sex>
                     <persName type="lemma">שלום</persName>
                     <persName type="lemma" xml:lang="en">Salome</persName>
                     <persName>Σαλώμη<ref type="note" corresp="#Vol-2-Vol-1-ADD-d423e4"/>
