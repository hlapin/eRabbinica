               </persName>
               <persName xml:lang="checkme"/>
               <state type="desc">
                  <note>Esther (1)’s son</note>
               </state>
               <state type="provenance">
                  <note>Inscription, Admedera,<ref corresp="#d2e48114"/>Vidua</note>
               </state>
               <bibl>CIJ848</bibl>
