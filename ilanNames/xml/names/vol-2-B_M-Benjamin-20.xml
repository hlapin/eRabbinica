               <persName type="lemma" xml:lang="en">Benjamin</persName><ref type="note" corresp="#d165e5"/>
               <state type="desc">
                  <note>Joseph (85)’s son<ref type="note" corresp="#d2e6929"/>
                  </note>
               </state>
               <state type="provenance">
                  <note>Synagogue inscription, Ían Íalde,<ref type="note" corresp="#d2e6941"/>Rey-Coquais</note>
               </state>
